<body ng-app="application" ng-controller="appController" id="body">

<!-- Header Start -->
<%- include("header") %>
<section class="page-title bg-2">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="block">
          <h1>개인 후원 시스템</h1><br>
          <p>피후원자 승인</p>
        </div>
      </div>
    </div>
  </div>
</section>
<% if (check == 1){%>
  <script type ="text/javascript">
  alert ( "승인 처리 되었습니다");
  </script>
<%} else if (check==2){%>
  <script type ="text/javascript">
    alert ( "보류 처리 되었습니다");
    </script>
<%}check = false;%>
<section class="portfolio-work">
  <div class="container">
    <div class="row">
      <h2>피후원자 신청자 상세 정보</h2>
      <br><br>
      <table class="table" align="center">
          <tr>
            <td width="30%" border-right="1px solid black">이름</td>
            <td><%=data.name%></td>
          </tr>
          <tr>
            <td width="30%" border-right="1px solid black">주민등록번호</td>
            <td><%=data.id%></td>
          </tr>
          <tr>
              <td width="30%" border-right="1px solid black">핸드폰 번호</td>
              <td><%=data.phoneNum%></td>
          </tr>
          <tr>
              <td width="30%" border-right="1px solid black">이메일</td>
              <td><%=data.email%></td>
          </tr>
          <tr>
              <td width="30%" border-right="1px solid black">주소</td>
              <td><%=data.address%></td>
          </tr>
          <tr>
            <td width="30%" border-right="1px solid black">승인 상태</td>
            <td><%=data.status%></td>
          </tr>
          <tr>
              <td width="30%" border-right="1px solid black">사연</td>
              <td class = "td_story"><%=data.story%></td>
          </tr>
        </table>
    <section class="portfolio-work">
    <div class="container">
    <table>
    <form action="/government/pendingAction" method="post">
        <input type = "hidden" name = "recipientId" value = <%=data.id%>>
        
        <tr><label>보류 이유</label><br></tr>
        <tr>
        <%if(db.reason==''){%>
          <textarea name ="reason" value = "보류 이유를 적어주세요">보류 이유를 적어주세요</textarea>
        <%}else{%>
            <textarea name ="reason" value =<%=data.reason%>><%=data.reason%></textarea>
        <%}%>
        </tr>
        <tr><input id="pending" class="btn btn-default" type="submit" value="보류"></tr>
    </form>
    <br><br><br>
    <form action="/government/approveAction" method="post">
     <% var jsn = encodeURI(JSON.stringify(data)); %>
        <input type = "hidden" name = "data" value = <%=jsn%>>
        <tr><input id="approve" class="btn btn-primary" type="submit" value="승인"></tr>
    </form>
    </table>
    </div>
    </section>
<br>
<br><br>
