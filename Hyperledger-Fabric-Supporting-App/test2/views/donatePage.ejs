<body ng-app="application" ng-controller="appController" id="body">

<!-- Header Start -->
<header class="header">
  <% include("header") %>
</header>
<section class="page-title bg-2">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="block">
          <h1>개인 후원 시스템</h1><br>
          <p>후원하기</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="portfolio-work">
    <div class="container">
      <div class="row">
        <h3>바우처 후원</h3><br><br>	
        <label><%=name%> 님께 후원</label> 
        <br>
        <form method="post" action="/supporter/donate">
        <!-- 구매한 바우처 목록에서 바우처를 선택할 수 있도록 수정하기 -->
        <label>주민등록번호: <input type = "text" name = "ids"></label>
        <label>기부할 블록 수:  <input type = "text" name = "number"></label>
        <br><br>
        <input type = "hidden" name = "idr" value = <%=id%>>
        <input type = "hidden" name = "name" value = <%=name%>>
        <input class="btn btn-default" type="submit" value="후원하기">
        </form>
      </div>
    </div>
</section>

<!-- footer Start -->
<footer class="footer">
<% include("footer") %>
</footer>
